{
  "name": "nodejs-typescript-jest-template",
  "version": "1.0.0",
  "description": "nodejs-typescript-jest-template",
  "author": "Andrew",
  "license": "MIT",
  "scripts": {
    "local": "NODE_ENV=local nodemon --watch ./src --ext js,jsx,ts,tsx,json,gql --exec ts-node --transpile-only 'src/server.ts'",
    "lint": "npm run lint:src && npm run lint:tests",
    "lint:src": "eslint src --ext .ts",
    "lint:tests": "eslint __tests --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --forceExit --colors --verbose --detectOpenHandles --coverage",
    "test:ci": "jest --ci --runInBand --silent --colors --coverage",
    "build": "rm -rf ./dist/* && tsc",
    "start": "node dist/server.js"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.165",
    "@types/luxon": "^1.25.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-winston": "^4.0.5",
    "http-status-codes": "^2.1.4",
    "moment": "^2.29.4",
    "nodemon": "2.0.4",
    "pg": "^8.3.0",
    "winston": "3.3.2",
    "express-validator": "^6.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/compression": "1.7.0",
    "@types/dotenv": "8.2.0",
    "@types/eslint": "7.2.4",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/express": "4.17.6",
    "@types/hapi__joi": "17.1.2",
    "@types/jest": "26.0.0",
    "@types/node": "14.0.13",
    "@types/nodemon": "1.19.0",
    "@types/pg": "^7.14.5",
    "@types/prettier": "^2.1.5",
    "@types/supertest": "2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "3.4.0",
    "eslint": "7.3.1",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unused-imports": "^0.1.3",
    "jest": "26.1.0",
    "jest-express": "1.12.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.2",
    "supertest": "4.0.2",
    "ts-jest": "26.1.1",
    "ts-node": "^9.0.0",
    "typescript": "3.9.5"
  }
}
